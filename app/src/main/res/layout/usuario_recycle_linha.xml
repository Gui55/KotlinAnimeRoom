<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="140dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/userRecyclePhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/usernameRecycle"
                android:layout_width="@dimen/widthSideImage"
                android:layout_height="@dimen/editTextDefault"
                android:layout_toRightOf="@id/userRecyclePhoto"/>

            <TextView
                android:id="@+id/idNumberRecycle"
                android:layout_width="@dimen/widthSideImage"
                android:layout_height="@dimen/editTextDefault"
                android:layout_below="@id/usernameRecycle"
                android:layout_toRightOf="@id/userRecyclePhoto"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>